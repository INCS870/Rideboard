# ver 0.2 for non-ha only

sudo yum install java
curl -O https://download.jboss.org/wildfly/23.0.2.Final/wildfly-23.0.2.Final.tar.gz
gunzip -dc wildfly-23.0.2.Final.tar.gz | tar xf -
gunzip -dc oracle.tar.gz | tar xf -
cp Rideboard.war $HOME/wildfly-23.0.2.Final/standalone/deployments/
cp standalone.xml $HOME/wildfly-23.0.2.Final/standalone/configuration/
mv oracle $HOME/wildfly-23.0.2.Final/modules/system/layers/base/com/
ln -sf wildfly-23.0.2.Final wildfly
rm wildfly-23.0.2.Final.tar.gz
sudo ./run_wildfly.sh start
